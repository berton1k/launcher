                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>
                                            <StackPanel>
                                                <Border BorderBrush="#1F2B39" BorderThickness="0,0,0,1" Padding="0,6">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding Labels.RegionLabel}" Style="{StaticResource SettingsRowText}"/>
                                                        <ComboBox x:Name="RegionCombo" Grid.Column="1" Width="160" Style="{StaticResource AnimatedComboBox}" ItemsSource="{Binding Regions}" SelectedItem="{Binding SelectedRegion}" ItemContainerStyle="{StaticResource AnimatedComboBoxItem}" AlternationCount="50">
                                                            <ComboBox.ItemTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBlock Text="{Binding Icon}" FontSize="11" Margin="0,0,6,0"/>
                                                                        <TextBlock Text="{Binding Name}" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </ComboBox.ItemTemplate>
                                                        </ComboBox>
                                                    </Grid>
                                                </Border>
                                                <Border BorderBrush="#1F2B39" BorderThickness="0,0,0,1" Padding="0,10">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding Labels.LanguageLabel}" Style="{StaticResource SettingsRowText}"/>
                                                        <ComboBox x:Name="LanguageCombo" Grid.Column="1" Width="160" Style="{StaticResource AnimatedComboBox}" ItemsSource="{Binding Languages}" SelectedItem="{Binding SelectedLanguage}" ItemContainerStyle="{StaticResource AnimatedComboBoxItem}" AlternationCount="50">
                                                            <ComboBox.ItemTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBlock Text="{Binding Icon}" FontSize="11" Margin="0,0,6,0"/>
                                                                        <TextBlock Text="{Binding Name}" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </ComboBox.ItemTemplate>
                                                        </ComboBox>
                                                    </Grid>
                                                </Border>
                                                <Border BorderBrush="#1F2B39" BorderThickness="0,0,0,1" Padding="0,10">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding Labels.UiVolumeLabel}" Style="{StaticResource SettingsRowText}"/>
                                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                            <Slider Minimum="0" Maximum="100" Value="{Binding UiSfxVolume, Mode=TwoWay}" Width="130" Margin="0,0,10,0" Style="{StaticResource NeonSlider}" behaviors:SmoothSliderBehavior.Enable="True"/>
                                                            <TextBlock Text="{Binding UiSfxVolumeLabel}" Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                                <Border BorderBrush="#1F2B39" BorderThickness="0,0,0,1" Padding="0,10">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding Labels.OpenMultiplayerLabel}" Style="{StaticResource SettingsRowText}"/>
                                                        <Button Grid.Column="1" Content="{Binding Labels.ButtonOpen}" Style="{StaticResource SettingsActionButton}" Command="{Binding OpenLauncherFolderCommand}" Margin="12,0,0,0"/>
                                                    </Grid>
                                                </Border>
                                                <Border BorderBrush="#1F2B39" BorderThickness="0,0,0,1" Padding="0,10">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding Labels.MinimizeOnLaunchLabel}" Style="{StaticResource SettingsRowText}"/>
                                                        <ToggleButton Grid.Column="1" Style="{StaticResource NeonToggle}" IsChecked="{Binding MinimizeOnLaunch, Mode=TwoWay}" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                                <Border Padding="0,10">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding Labels.ShowHiddenServersLabel}" Style="{StaticResource SettingsRowText}"/>
                                                        <ToggleButton Grid.Column="1" Style="{StaticResource NeonToggle}" IsChecked="{Binding ShowHiddenServers, Mode=TwoWay}" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </StackPanel>
                                        </Grid>

                                        <Grid x:Name="SettingsAdvanced">
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Setter Property="Opacity" Value="0"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedSettingsTab}" Value="Advanced">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <DataTrigger.EnterActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.22"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </DataTrigger.EnterActions>
                                                            <DataTrigger.ExitActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.18"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </DataTrigger.ExitActions>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>
                                            <StackPanel>
                                                <Border BorderBrush="#1F2B39" BorderThickness="0,0,0,1" Padding="0,8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding Labels.ChangeGtaLegacyLabel}" Style="{StaticResource SettingsRowText}"/>
                                                        <Button Grid.Column="1" Content="{Binding Labels.ButtonChange}" Style="{StaticResource SettingsActionButton}" Command="{Binding ChangeGtaLegacyPathCommand}" Margin="12,0,0,0"/>
                                                    </Grid>
                                                </Border>
                                                <Border BorderBrush="#1F2B39" BorderThickness="0,0,0,1" Padding="0,8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding Labels.ChangeMajesticLabel}" Style="{StaticResource SettingsRowText}"/>
                                                        <Button Grid.Column="1" Content="{Binding Labels.ButtonChange}" Style="{StaticResource SettingsActionButton}" Command="{Binding ChangeMajesticPathCommand}" Margin="12,0,0,0"/>
                                                    </Grid>
                                                </Border>
                                                <Border BorderBrush="#1F2B39" BorderThickness="0,0,0,1" Padding="0,8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding Labels.CleanTempLabel}" Style="{StaticResource SettingsRowText}"/>
                                                        <Button Grid.Column="1" Content="{Binding Labels.ButtonClean}" Style="{StaticResource DevOverlayButtonStyle}" Tag="{Binding Labels.DevLabel}" Margin="12,0,0,0"/>
                                                    </Grid>
                                                </Border>
                                                <Border BorderBrush="#1F2B39" BorderThickness="0,0,0,1" Padding="0,8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding Labels.FixPermissionsLabel}" Style="{StaticResource SettingsRowText}"/>
                                                        <Button Grid.Column="1" Content="{Binding Labels.ButtonFix}" Style="{StaticResource DevOverlayButtonStyle}" Tag="{Binding Labels.DevLabel}" Margin="12,0,0,0"/>
                                                    </Grid>
                                                </Border>
                                                <Border Padding="0,8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding Labels.VerifyFilesLabel}" Style="{StaticResource SettingsRowText}"/>
                                                        <Button Grid.Column="1" Content="{Binding Labels.ButtonVerify}" Style="{StaticResource DevOverlayButtonStyle}" Tag="{Binding Labels.DevLabel}" Margin="12,0,0,0"/>
                                                    </Grid>
                                                </Border>
                                            </StackPanel>
                                        </Grid>

                                        <Grid x:Name="SettingsMods">
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Setter Property="Opacity" Value="0"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedSettingsTab}" Value="Mods">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <DataTrigger.EnterActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.22"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </DataTrigger.EnterActions>
                                                            <DataTrigger.ExitActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.18"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </DataTrigger.ExitActions>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>
                                            <StackPanel>
                                                <Border BorderBrush="#1F2B39" BorderThickness="0,0,0,1" Padding="0,10">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding Labels.ModsEnableLabel}" Style="{StaticResource SettingsRowText}"/>
                                                        <ToggleButton Grid.Column="1" Style="{StaticResource NeonToggle}" IsChecked="{Binding IsGraphicsModsEnabled, Mode=TwoWay}" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                                <Border BorderBrush="#1F2B39" BorderThickness="0,0,0,1" Padding="0,10">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding Labels.ModsDisableCheckLabel}" Style="{StaticResource SettingsRowText}"/>
                                                        <ToggleButton Grid.Column="1" Style="{StaticResource NeonToggle}" IsChecked="{Binding DisableGraphicsVersionCheck, Mode=TwoWay}" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                                <Border BorderBrush="#1F2B39" BorderThickness="0,0,0,1" Padding="0,10">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding Labels.ModsOpenFolderLabel}" Style="{StaticResource SettingsRowText}"/>
                                                        <Button Grid.Column="1" Content="{Binding Labels.ButtonOpen}" Style="{StaticResource DevOverlayButtonStyle}" Tag="{Binding Labels.DevLabel}" Margin="12,0,0,0"/>
                                                    </Grid>
                                                </Border>
                                                <TextBlock Text="{Binding Labels.ModsNoteText}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10" Opacity="0.65" TextWrapping="Wrap" Margin="0,10,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
